description="Nagios Performance C Daemon"
SVC_CONFIGFILE=/etc/pnp/npcd.cfg
SVC_OPTS="--config ${SVC_CONFIGFILE}"
SVC_USE="net syslog"
SVC_STARTED_COMMANDS=reload

reload()
{
	svc_sig HUP
}

