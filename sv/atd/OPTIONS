SVC_OPTS='-f -d'
SVC_USER=at
SVC_GROUP=at
SVC_SPOOLDIR=/var/spool/at
SVC_USE=syslog

pre()
{
	checkpath -q -d -m 1770 -o ${SVC_USER}:${SVC_GROUP} ${SVC_SPOOLDIR}/atjobs
	checkpath -q -d -m 1770 -o ${SVC_USER}:${SVC_GROUP} ${SVC_SPOOLDIR}/atspool
}

