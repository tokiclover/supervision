#!/bin/sh
#
# $Header:  /lib/sv/sh/runscript                         Exp $
# $Author: (c) 2015-6 tokiclover <tokiclover@gmail.com>  Exp $
# $License: 2-clause/new/simplified BSD                  Exp $
# $Version: 0.6 2016/07/28 21:09:26                      Exp $
#

#
# ZSH compatibility
#
if [ -n "${ZSH_VERSION}" ]; then
	emulate sh
	NULLCMD=:
	setopt NO_GLOB_SUBST
	setopt SH_WORD_SPLIT
	disable -r end
else
	case "$(set -o 2>/dev/null)" in
		(*posix*) set -o posix;;
	esac
fi

help_message() {
	cat <<-EOH
 usage: rs [OPTIONS] SERVICE COMMAND [ARGS]
   COMMAND: add|del|desc|remove|reload|restart|start|stop|status|zap|cgroup_remove_service
   OPTIONS: [OPTS] SERVICE COMMAND [ARGS]
     -D, --nodeps     Disable dependencies
     -g, --debug      Enable debug mode
     -r, --rs         Select runscript backend
     -v, --sv         Select supervision backend
     -h, --help       Print help and exit
EOH
${1+exit ${1}}
}

[ ${#} -ge 1 ] || help_message 1
while true; do
	case "${1}" in
		(-D|--node*) SVC_DEPS=0 ;;
		(-d|--deps)  SVC_DEPS=1 ;;
		(-r|--rs) RS_TYPE="rs" ;;
		(-v|--sv) RS_TYPE="sv" ;;
		(-g|--debug) set -x ;;
		(-h|--help) help_message 0 ;;
		(*) break ;;
	esac
	shift
done
:	${SV_LIBDIR:=${0%/sh/*}}
:	${SVC_NAME:=${1##*/}}
:	${name=${SVC_NAME}}
:	${__cmd__=${2}}

if [ -z "${RS_TYPE}" ]; then
	[ -d "${1}" ] && RS_TYPE=sv || RS_TYPE=rs
fi

case "${1}" in
	(*/sv/.stage-[0-3]*)
:	${RS_RUNDIR:=${1%/*}}
:	${SV_SVCDIR:=${RS_RUNDIR%/*}}
	;;
	(*)
:	${SV_SVCDIR:=${1%/*}}
	;;
esac
shift
. "${0%/*}"/runscript-functions ||
	{ echo "Required file not found." >&2; exit 1; }
if [ ${#} -lt 1 ]; then
	error "Insufficient number of arguments"
	exit 2
fi
. ${SV_SVCDIR}/.opt/SVC_OPTIONS

#
# Handle command
#
case "${RS_TYPE}" in
	(rs) rs_cmd "${@}";;
	(sv)
		export SVC_DEPS SVC_DEBUG RS_RUNLEVEL RS_STAGE RS_TYPE
		set | while read line; do
			case "${line}" in
				(COLUMNS=*|SVC_DEPS=*|SVC_DEBUG=*|RS_RUNLEVEL=*|RS_STAGE=*|RS_TYPE=*)
					printf "${line}\n";;
			esac
		done >${SV_TMPDIR}/${SVC_NAME}_ENV
		svc_cmd "${@}"
		;;
esac

#
# vim:fenc=utf-8:ft=sh:ci:pi:sts=0:sw=4:ts=4:
#
