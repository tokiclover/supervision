#!/sbin/sv-run
#
# $Id: @(#) /etc/sv/hostname                                          Exp $
# $L$: 2-clause/new/simplified BSD License                            Exp $
#

description="Set up machine hostname"
SVC_KEYWORD="docker lxc prefix supervision systemd-nspawn"

start()
{
	hostname "${hostname:-${HOSTNAME}}"
}

