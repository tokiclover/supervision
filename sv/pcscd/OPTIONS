description='PC/SC Smart Card Daemon'

SVC_CONFIGFILE=/etc/reader.conf.d/reader.conf
SVC_OPTS='--config ${SVC_CONFIGFILE} --foreground'
SVC_AFTER='udev dbus'
SVC_USE=logger

start_pre()
{
	checkpath -q -d -m 0755 -o pcscd:pcscd /run/pcscd
}

