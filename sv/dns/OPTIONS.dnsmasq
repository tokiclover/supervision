name=dnsmasq
SVC_CONFIGFILE=/etc/${name}.conf
SVC_CMD=${name}
SVC_OPTS='-k -u ${name} -g ${name}'
SVC_USER=${name}
SVC_GROUP=${name}
SVC_USE=logger

start_pre()
{
	checkpath -q -f -m 0644 -o ${name}:${name} /var/lib/misc/${name}.leases
}

