name=dnsmasq
SVC_CONFIGFILE=/etc/${name}.conf
SVC_CMD=/usr/sbin/dnsmasq
SVC_USER=nobody
SVC_GROUP=nobody
SVC_OPTS="-k ${SVC_USER:+-u} ${SVC_USER} ${SVC_GROUP:+-g} ${SVC_GROUP}"
SVC_USE=logger

start_pre()
{
	checkpath -q -f -m 0644 -o ${name}:${name} /var/lib/misc/${name}.leases
}

