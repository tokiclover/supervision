description='Scanner Access Now Easy daemon'

ENV_DIR=Yes
SVC_OPTS='-d 2'
SVC_USER=saned
SVC_GROUP=saned
SVC_CONFIGFILE=/etc/sane.d/saned.conf
SANE_CONFIG_DIR=/etc/sane.d

start_pre()
{
	checkpath -q -d -m 0775 -o ${SVC_USER}:${SVC_GROUP} /var/run/saned
}

