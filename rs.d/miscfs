#!/sbin/rs
#
# $Header: /etc/rs.d/miscfs                                Exp $
# $License: 2-clause/new/simplified BSD                    Exp $
# $Copyright: (c) 2007-2008 Roy Marples <roy@marples.name> Exp $
#

description='Set up /tmp /var/MISC'
SVC_NEED='localfs'
SVC_USE='zram'
SVC_BEFORE='syslog'
SVC_AFTER='clock'

login_setup()
{
	local records=/var/run/utmp
	if [ "${OS_NAME}" = NetBSD ]; then
		records="${records} /var/run/utmpx"
	fi
	[ -e /var/log/wtmp ] && records="${records} /var/log/wtmp"

	begin "Creating user login records"
	checkpath -F -g utmp -m 0664 ${records} >${NULL} 2>&1 ||
	checkpath -F         -m 0664 ${records} >${NULL} 2>&1
	end "${?}"
}

tmpdir_cleanup()
{
	cd /tmp
	begin "Cleaning /tmp directory"
	if yesno "${WIPE_TMPDIR}"; then
	#
	# Remove sticky bit beforehand
	#
	[ -d .private ] && chattr -R -a .private >${NULL} 2>&1
	find . -maxdepth 1 \
		! -name . \
		! -name journal \
		! -name lost+found \
		! -name .ICE-unix ! -name .X11-unix \
		! -name '*quota.user' ! -name '*quota.group' \
		-exec rm -fr -- {} +
	else
	rm -fr -- .esd* esrv* .fam* kio* jpsock.* orbit-* ksocket-* \
		libdhcpcd-wpa-* ssh-*
	fi
	end "${?}"
}

var_rundir_cleanup()
{
	local e fusr_cmd=$(command -v fuser 2>${NULL})

	begin "Cleaning /var/run"
	for e in $(find /var/run ! -type d ! -name 'utmp*' ! \
		-name random-seed ! -name dev.db ! -name 'ld*.so.hints'); do
		if [ -S "${e}" -a -n "${fusr_cmd}" ]; then
			${fusr_cmd} "${e}" >${NULL} 2>&1 || rm -- "${e}"
		fi
		rm -- "${e}"
	done
	end "${?}"
}

vardir_setup()
{
	local dir

	for dir in /var/lock /var/run; do
		if [ -L "${dir}" ]; then
			dir="$(readlink ${dir})"
			case "${dir}" in
				(/run/*)
				begin "Creating ${dir}"
				mkdir -p -m 0755 "${dir}"
				end "${?}"
				;;
			esac
		elif [ -d "${dir}" ]; then
			[ "${dir}" = /var/run ] && var_rundir_cleanup
		else
			begin "Creating ${dir}"
			mkdir -p -m 0755 "${dir}"
			end "${?}"
		fi
	done
}

start_pre()
{
	[ "${RS_STAGE}" -le 1 ] || return

	local fhs_dirs
	if [ "${OS_NAME}" = Linux ]; then
		fhs_dirs=/var/lib/misc
	fi
	mkdir -p -m 0755 /var/log /var/run ${fhs_dirs} ||
		{ error "Failed to create required FHS directories"; return 1; }

	vardir_setup
	login_setup
}

start()
{
	rm -fr /tmp/.ICE-unix /tmp/.X11-unix
	mkdir -m 1777 /tmp/.ICE-unix /tmp/.X11-unix
	mountinfo -q -t tmpfs /tmp || tmpdir_cleanup

	if yesno "${DMESG_LOG}"; then
		dmesg >/var/log/dmesg
		chmod 0640 /var/log/dmesg
	fi
	return 0
}

#
